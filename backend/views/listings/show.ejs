<% layout("/layouts/starter") -%>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing details:</h3>
        </div>
        <div class="col-6 offset-2">
            <div class="card">
                <img src="<%= Listing.image.url %>>" alt="image not loaded" class="card-img-top show-img">
            </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= Listing.title %></b><br>
                    <%= Listing.description %> <br>
                    &#8377;<%= Listing.price.toLocaleString("en-IN") %> <br>
                    <%= Listing.location %> <br>
                    <%= Listing.country %>
                </p>
            </div>
    <br>
    <div class="btns">
    <a href="/listings/<%= Listing._id %>/edit" class="btn btn-dark col-1">Edit</a>
    
    <form action="/listings/<%= Listing._id%>?_method-DELETE" method="post" >
        <button class="btn btn-dark offset-4 add-btn">Delete</button>
    </form>
    </div>
</div>
</div>
</body>
